@page "/"
@layout EmptyLayout
@inject NavigationManager Navigation

<div class="home-container @backgroundClass">
    <button @onclick="RedirectToLogin" class="home-button primary-button">
        כניסה
    </button>
    <button class="home-button secondary-button">
        הרשמה
    </button>
</div>

@code {
    private string backgroundClass = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(100); // Small delay to ensure component is fully rendered
            backgroundClass = "high-res-background";
            StateHasChanged();
        }
    }

    private void RedirectToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}

